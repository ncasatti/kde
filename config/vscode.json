{
    // Editor General Settings
    "editor.fontFamily": "Cascadia Code",
    "editor.fontSize": 13.5,
    "editor.tabSize": 2,
    "editor.letterSpacing": 0.3,
    "editor.fontLigatures": true,
    "editor.fontVariations": true,
    "editor.formatOnSave": false,
    "editor.lineNumbers": "interval",
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "trailing",
    "editor.cursorStyle": "line-thin",
    // Editor Visual Behavior
    "editor.smartSelect.selectLeadingAndTrailingWhitespace": true,
    "editor.linkedEditing": true,
    "editor.stickyScroll.enabled": true,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.formatOnType": true,
    "editor.find.cursorMoveOnType": true,
    "editor.scrollbar.vertical": "auto",
    "editor.overviewRulerBorder": true,
    "editor.minimap.autohide": true,
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "phase",
    // Editor Code Style & Formatting
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.guides.indentation": false,
    "editor.guides.highlightActiveIndentation": true,
    "editor.guides.indentSize": 1,
    // Window & Workbench Settings
    "window.zoomLevel": -0.4,
    "window.restoreWindows": "none",
    "window.customMenuBarAltFocus": false,
    "window.newWindowDimensions": "maximized",
    "window.commandCenter": false,
    "window.menuBarVisibility": "hidden",
    "window.titleBarStyle": "native",
    // Workbench Appearance
    "workbench.panel.opensMaximized": "always",
    "workbench.list.smoothScrolling": true,
    "workbench.productIconTheme": "fluent-icons",
    "workbench.iconTheme": "symbols",
    "workbench.activityBar.location": "bottom",
    "workbench.editor.showTabs": "none",
    "workbench.editor.editorActionsLocation": "hidden",
    "workbench.tree.indent": 10,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.colorTheme": "Best Themes - Ayu Darkvenom",
    // Terminal Configuration
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.fontFamily": "Cascadia Code",
    "terminal.integrated.fontSize": 13.9,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.letterSpacing": 1,
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.cursorStyleInactive": "underline",
    "terminal.integrated.gpuAcceleration": "on",
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.sendKeybindingsToShell": true,
    "terminal.external.linuxExec": "konsole",
    "terminal.explorerKind": "external",
    // Debug Settings
    "debug.console.fontFamily": "Cascadia Code",
    "debug.console.fontSize": 13.9,
    "debug.openDebug": "openOnDebugBreak",
    "debug.onTaskErrors": "abort",
    "debug.inlineValues": "on",
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.variableTypes": true,
    // Language Specific Settings
    "[python]": {
        "editor.formatOnType": true,
        "editor.defaultFormatter": "olleln.pyrefact",
        "diffEditor.ignoreTrimWhitespace": false
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[css]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    // File Associations & Handling
    "files.associations": {
        "config": "yaml"
    },
    "files.autoSave": "off",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "explorer.sortOrder": "type",
    "explorer.fileNesting.enabled": true,
    "explorer.excludeGitIgnore": true,
    // File Nesting Patterns
    "explorer.fileNesting.patterns": {
        "tailwind.config.ts": "postcss.config.mjs",
        "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, tsconfig.json, .eslintrc.json, .gitignore, next.config.mjs, next-env.d.ts, eslint.config.mjs, next.config.ts, tailwind.config.ts"
    },
    // Git Settings
    "git.autofetch": true,
    // Vim Extension Settings
    "vim.useSystemClipboard": true,
