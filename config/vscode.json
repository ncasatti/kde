    // Extension Specific Settings
    "prettier.singleQuote": true,
    "prettier.semi": false,
    "gitlens.graph.minimap.enabled": false,
    "gitlens.graph.layout": "editor",
    "gitlens.codeLens.enabled": false,
    "rest-client.previewColumn": "current",
    "rest-client.requestNameAsResponseTabTitle": true,
    "rest-client.showResponseInDifferentTab": false,
    // GitHub Copilot Settings
    "github.copilot.editor.enableAutoCompletions": true,
    "github.copilot.enable": {
        "*": true,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    // Markdown Preview Settings
    "markdown-preview-enhanced.liveUpdate": false,
    "markdown-preview-enhanced.previewTheme": "one-dark.css",
    "markdown-preview-enhanced.revealjsTheme": "league.css",
    "markdown-preview-enhanced.codeBlockTheme": "one-dark.css",
    "markdown-pdf.displayHeaderFooter": false,
    "markdown-pdf.printBackground": false,
    "markdown-pdf.highlightStyle": "atom-one-dark.css",
    "markdown-pdf.styles": [
        "style.css"
    ],
    // Custom Theme Colors
